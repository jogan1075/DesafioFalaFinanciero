<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="-300dp"
        android:bottom="300dp"
        android:left="-200dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="20"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <gradient
                    android:angle="180"
                    android:startColor="#16DD09"
                    android:endColor="#F0F1EE"
                    android:type="linear" />
            </shape>
        </rotate>
    </item>
</layer-list>